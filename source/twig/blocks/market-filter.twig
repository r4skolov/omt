<div class="market-filter">
	<div class="accordion accordion--filter">
		<button type="button" class="accordion__control accordion__control--filter">
			<span class="accordion__title accordion__title--filter">{{ 'Страны' }}</span>
			<span class="accordion__icon accordion__icon--filter">
						<svg xmlns="http://www.w3.org/2000/svg" width="12" height="10" viewBox="0 0 12 10" fill="none">
						<path d="M6 10L7.94465e-08 9.53989e-08L12 -9.53674e-07L6 10Z" fill="white"/>
						</svg>
					</span>
		</button>
		<div class="accordion__content">
			<div class="accordion__main">
				<ul class="filter list-reset">
					<li class="filter__item">
						<label for="all-markets" class="checkbox-style">
							<input type="checkbox" name="all-markets" value="" id="all-markets"
							       class="radio-hidden">
							<span>{{ 'Россия' }}</span>
						</label>
					</li>
					<li class="filter__item">
						<label for="motor-fuel" class="checkbox-style">
							<input type="checkbox" name="motor-fuel" value="" id="motor-fuel"
							       class="radio-hidden">
							<span>{{ 'Китай' }}</span>
						</label>
					</li>
					<li class="filter__item">
						<label for="hydrocarbon-gases" class="checkbox-style">
							<input type="checkbox" name="hydrocarbon-gases" value=""
							       id="hydrocarbon-gases"
							       class="radio-hidden">
							<span>{{ 'Япония' }}</span>
						</label>
					</li>
					<li class="filter__item">
						<label for="petrochemicals" class="checkbox-style">
							<input type="checkbox" name="petrochemicals" value="" id="petrochemicals"
							       class="radio-hidden">
							<span>{{ 'Германия' }}</span>
						</label>
					</li>
					<li class="filter__item">
						<label for="lubricants" class="checkbox-style">
							<input type="checkbox" name="lubricants" value="" id="lubricants"
							       class="radio-hidden">
							<span>{{ 'Франция' }}</span>
						</label>
					</li>
					<li class="filter__item">
						<label for="lubricants" class="checkbox-style">
							<input type="checkbox" name="lubricants" value="" id="lubricants"
							       class="radio-hidden">
							<span>{{ 'Канада' }}</span>
						</label>
					</li>
				</ul>
			</div>
		</div>
	</div>
	<div class="accordion accordion--filter">
		<button type="button" class="accordion__control accordion__control--filter">
			<span class="accordion__title accordion__title--filter">{{ 'Год' }}</span>
			<span class="accordion__icon accordion__icon--filter">
						<svg xmlns="http://www.w3.org/2000/svg" width="12" height="10" viewBox="0 0 12 10" fill="none">
						<path d="M6 10L7.94465e-08 9.53989e-08L12 -9.53674e-07L6 10Z" fill="white"/>
						</svg>
					</span>
		</button>
		<div class="accordion__content">
			<div class="accordion__main">
				<ul class="filter list-reset">
					<li class="filter__item">
						<label for="2022" class="checkbox-style">
							<input type="checkbox" name="2022" value="" id="2022">
							<span>2022</span>
						</label>
					</li>
					<li class="filter__item">
						<label for="2021" class="checkbox-style">
							<input type="checkbox" name="2021" value="" id="2021">
							<span>2021</span>
						</label>
					</li>
					<li class="filter__item">
						<label for="2020" class="checkbox-style">
							<input type="checkbox" name="2020" value="" id="2020">
