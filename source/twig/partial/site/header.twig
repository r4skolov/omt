<!--Header-->
<header id="header" class="header">
	<div class="container">
		<div class="header__main">
			<div class="header__wrapper">
				<a href="index.html" class="header__logo logo">
					<img class="logo__img" src="images/icon/logo.svg" alt="OMT" width="124" height="89">
					<div class="logo__text">20 {{ "Лет" }}</div>
				</a>
				<div class="header__panel">
					<div class="header__top" data-menu>
						<div class="header__wrap">
							<nav class="header__menu nav">
								{% include 'menu.twig' %}
							</nav>
							<div class="header__contacts">
								{% include 'social.twig' %}
								<a href="tel:+79999999999" class="header__phone">+7 999 999 99 99</a>
								<button type="button" class="b-btn b-btn--white">{{ "Перезвонить" }}</button>
							</div>
						</div>
					</div>
					<div class="header__bottom">
						<div class="header__search">
							<button type="button" class="search-btn">
								<img src="images/icon/search-white.svg" alt="" width="24" height="24">
							</button>
							<form action="#" class="form form--search" id="form-search">
								<label for="header-search">
									<input id="header-search" type="text" class="form__input" placeholder="Введите запрос" data-search="input">
								</label>
								<button type="button" class="b-btn b-btn--white disabled" data-search="button">{{ "Найти" }}</button>
								<button type="button" class="form__close">
