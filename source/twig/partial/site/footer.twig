	<div class="container">
		<div class="footer__wrapper">
			<div class="footer__grid">
				<a href="index.html" class="logo footer--logo">
					<img class="logo__img" src="images/icon/logo.svg" alt="OMT" width="124" height="89">
					<div class="logo__text">20 {{ "Лет" }}</div>
				</a>
				<div class="footer__menu">
					<div class="footer__name">
						{{ "Меню:" }}
					</div>
					<nav class="nav">
						{% include "menu.twig" with {class: 'nav__list--footer'} %}
