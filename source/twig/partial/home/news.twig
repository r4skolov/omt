{% if data|length > 0 %}
	<section class="news-section section-offset" data-slider="news-slider">
		<div class="container">
			<div class="news-section__wrapper">
				<div class="section-head news-section__head">
					<h2 class="section-title">
						{{ "Новости" }}
					</h2>
					<a href="#" class="b-btn b-btn--link">{{ "Читать больше новостей" }}</a>
					<div class="swiper-nav">
						<div class="news-prev swiper-button swiper-button-prev">
							<svg xmlns="http://www.w3.org/2000/svg" width="20" height="15" viewBox="0 0 20 15"
							     fill="none">
								<path d="M19 7.86517H1M1 7.86517L6.26316 2.86719M1 7.86517L6.26316 12.8632"
								      stroke="#2852A9"
								      stroke-linecap="round" stroke-linejoin="round"/>
							</svg>
						</div>
						<div class="news-next swiper-button swiper-button-next">
							<svg xmlns="http://www.w3.org/2000/svg" width="20" height="15" viewBox="0 0 20 15"
							     fill="none">
								<path d="M1 7.86517H19M19 7.86517L13.7368 2.86719M19 7.86517L13.7368 12.8632"
								      stroke="#2852A9"
								      stroke-linecap="round" stroke-linejoin="round"/>
							</svg>
						</div>
					</div>
				</div>
				<div class="news-section__wrap">
					<div class="swiper swiper--news">
						<div class="swiper-wrapper">
							{% for item in data.list %}
								<div class="swiper-slide">
									{% include "../../blocks/news-card.twig" with {
										'item': item,
									} only %}
								</div>
							{% endfor %}
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
{% endif %}
