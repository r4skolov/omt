<section class="feedback section-offset">
	<div class="container">
		<div class="feedback__wrapper">
			<div class="feedback__main">
				<h2 class="section-title feedback__title">
					{{ titleFeedback }}
				</h2>
				<div class="feedback__text">
					<p>
						{{ textFeedback }}
					</p>
				</div>
				<form action="#" class="form form--feedback" id="feedback-form">
					<div class="form__wrap">
						<div class="form__item form__item--error">
							<label class="form__label" for="feedback-name">
								<input type="text" id="feedback-name" class="form__input" placeholder="Имя">
							</label>
							<div class="form__error">{{ "Заполните поле" }}</div>
						</div>
						<div class="form__item">
							<label class="form__label" for="feedback-phone">
								<input type="text" id="feedback-phone" class="form__input" placeholder="Телефон">
							</label>
							<div class="form__error">{{ "Заполните поле" }}</div>
						</div>
						<textarea class="form__textarea" name="feedback-message" id="feedback-message" cols="30"
						          rows="2"
						          placeholder="Сообщение"></textarea>
					</div>
					<div class="form__btn">
						<button type="button" class="b-btn b-btn--green">{{ "Отправить" }}</button>
						<div>{{ "Нажимая «Отправить», я даю свое согласие на обработку персональных данных" }}</div>
					</div>
				</form>
			</div>
			<div class="feedback__img">
				<picture>
					<source srcset="images/home/feedback/feedback.webp 1x, images/home/feedback/feedback@2x.webp 1.3x"
					        type="image/webp">
					<source srcset="images/home/feedback/feedback.png 1x, images/home/feedback/feedback@2x.png 1.3x"
					        type="image/png">
					<img src="images/home/feedback/feedback.png" width="488"
					     height="360" alt="">
				</picture>
			</div>
		</div>
	</div>
</section>
